#include <main.h>

extern volatile uint32_t dma2_status;
float32_t sensor_data;
extern volatile uint16_t adc_data;




int main(void){



	adc_init();
	adc_start();

	while(1){


		if(dma2_status == 1){
			sensor_data = ( adc_data * 3.3) / 4095 ;  // Equation to convert to volts
			dma2_status = 0;


		}
	}
}

