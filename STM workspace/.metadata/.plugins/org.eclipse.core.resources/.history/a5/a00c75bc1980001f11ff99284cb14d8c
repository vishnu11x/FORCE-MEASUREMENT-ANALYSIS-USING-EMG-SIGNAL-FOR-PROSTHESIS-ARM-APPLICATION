#include <main.h>

extern volatile uint16_t dma2_status;
extern volatile uint32_t adc_data[NUM_SAMPLE];
extern float_t adc_vdata[NUM_SAMPLE];

int main(void){

	clock_max_config();
	switch_init();
	adc_init();
	uart_init();
	while((GPIOA -> IDR & GPIO_IDR_IDR_5)){}
	adc_start();


	while(1){

		if(dma2_status){

			//clear dma flag
			dma2_status = 0;

		}

	}
}




