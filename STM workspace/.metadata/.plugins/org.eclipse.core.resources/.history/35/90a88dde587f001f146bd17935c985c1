#include <main.h>

extern volatile uint16_t dma2_status;
extern volatile uint32_t adc_data[NUM_SAMPLE];
extern float_t adc_vdata[NUM_SAMPLE];
char msg[50] = {'\0'};

int main(void){

	clock_max_config();
	adc_init();
	adc_start();
	uart_init();

	while(1){

		if(dma2_status){

			//clear dma flag
			dma2_status = 0;
			sprintf(msg, "%.2f, %.2f, %.2f", adc_vdata[0], adc_vdata[1], adc_vdata[2]);
			uart_string_write(&msg);
		}

	}
}




